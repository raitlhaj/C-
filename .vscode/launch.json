    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Attachement de canal",
            "type": "cppdbg",
            "request": "attach",
            "program": "entrer le nom du programme, par exemple ${workspaceFolder}/a.exe",
            "processId": "${command:pickRemoteProcess}",
            "pipeTransport": {
                "debuggerPath": "/usr/bin/gdb",
                "pipeProgram": "<chemin complet du programme de canal, par exemple plink.exe>",
                "pipeArgs": [],
                "pipeCwd": ""
            },
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Activer l'impression en mode Pretty pour gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Définir la version désassemblage sur Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
    {
        "name": "(Windows) Lancer",
        "type": "cppvsdbg",
        "request": "launch",
        "program": "entrer le nom du programme, par exemple ${workspaceFolder}/a.exe",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "environment": [],
        "console": "externalTerminal"
    },
    
        {
            "name": "(gdb) Attachement de Bash sur Windows",
            "type": "cppdbg",
            "request": "attach",
